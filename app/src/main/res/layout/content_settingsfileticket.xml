<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.budgetload.materialdesign.activity.SettingsFileTicket"
    tools:showIn="@layout/activity_settings_file_ticket">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbarSize="0dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="1">





                <TextView
                    android:id="@+id/txtspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/textviewbg"
                    android:drawableRight="@drawable/arrow"
                    android:hint="Select Ticket"
                    android:padding="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@null"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp" />

                <!--<Spinner-->
                <!--android:id="@+id/spinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--style="@style/spin_header"-->
                <!--android:dropDownSelector="#616161"-->
                <!--android:ems="10"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:padding="8dp"-->
                <!--android:textColor="#666"-->
                <!--android:textCursorDrawable="@null" />-->




            <TableRow
                android:id="@+id/wrap3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtspinner"
                android:layout_marginTop="10dp"
                android:layout_weight="2.50">

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/edittextbg"
                    android:digits="0123456789@qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM._- "
                    android:ems="10"
                    android:textColorHint="@color/hintColor"
                    android:gravity="top|left"
                    android:hint="Message"
                    android:inputType="textMultiLine"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:textSize="20sp" />

            </TableRow>


        </RelativeLayout>


    </ScrollView>

   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:paddingBottom="50dp">


       <android.support.design.widget.FloatingActionButton
           android:id="@+id/fab"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_gravity="bottom|end"
           android:layout_margin="16dp"
           android:layout_marginLeft="16dp"
           android:layout_marginRight="16dp"
           android:src="@drawable/fabarrow"
           app:backgroundTint="#2F63CD"
           app:rippleColor="#88abf5" />
   </ScrollView>


</RelativeLayout>
