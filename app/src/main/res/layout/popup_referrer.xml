<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TableRow
        android:id="@+id/tblrow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2f63cd"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:text="What is Referrer?"/>


    </TableRow>

    <TableRow
        android:id="@+id/tblrow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tblrow1"
        android:background="#2f63cd"
        android:padding="5dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="A referrer is the one who invites you to join Budgetload. \n Input mobile number of your referrer below."
            android:textColor="@color/white"
            android:textSize="18dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tblrow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tblrow2"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtrefcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="Referrer Mobile No"
            android:textColor="@color/textColor"
            android:textSize="24dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tblrow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tblrow3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/poprefmobileno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:inputType="number|phone"
            android:digits="0123456789"
            android:maxLength="11"
            android:textCursorDrawable="@null"
            android:background="@drawable/textviewbg"
            android:textColor="@color/textColor"
            android:textSize="22dp" />

    </TableRow>

    <TextView
        android:id="@+id/popCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/popSubmit"
        android:layout_below="@+id/tblrow4"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="CANCEL"
        android:textColor="#646464"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/popSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tblrow4"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="OK"
        android:textColor="#19BD4E"
        android:textSize="16dp" />


</RelativeLayout>
